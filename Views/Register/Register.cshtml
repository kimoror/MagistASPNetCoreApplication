@{
	ViewData["Title"] = "Register";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<nav class="navbar navbar-light bg-light">
	<a class="navbar-brand" href="#">
		<img src="https://img.icons8.com/?size=100&id=33203&format=png&color=000000" width="60" height="60" class="d-inline-block align-top" alt="">
		Your office
	</a>
</nav>
<div class="h-100 d-flex flex-column align-items-center justify-content-center">
	<h1 class="">Register</h1>
	<form method="post" asp-action="Register" asp-controller="Register">
		<div class="form-group">
			<label class="control-label">Login:</label>
			<input asp-for="Login" class="form-control" name="Login" />
			<label  class="control-label">FullName:</label>
			<input asp-for="FullName" class="form-control" name="FullName" />
			<label  class="control-label">Password:</label>
			<input asp-for="Password" class="form-control" type="password" name="Password" />
			@ViewData["Message"]
			<button class="btn btn-primary" type="submit">Register</button>
		</div>
	</form>
</div>
<footer class="bg-body-tertiary text-center text-lg-start">
